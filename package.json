{
    "name": "stricter",
    "version": "0.0.7",
    "description": "A project-wide js-linting tool",
    "files": [
        "LICENSE",
        "README.md",
        "dist",
        "bin"
    ],
    "main": "./dist/index.js",
    "bin": {
        "stricter": "./bin/cli.js"
    },
    "scripts": {
        "start": "node fuse.js",
        "build": "cross-env NODE_ENV=production node fuse.js",
        "lint": "tslint .",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stricter/stricter.git"
    },
    "keywords": [
        "lint",
        "project"
    ],
    "author": "Li0liQ",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/stricter/stricter/issues"
    },
    "homepage": "https://github.com/stricter/stricter#readme",
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(\\.|/)test\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    },
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/jest": "^21.1.8",
        "@types/node": "^8.0.58",
        "cross-env": "^5.1.1",
        "fuse-box": "^2.4.0",
        "fuse-box-typechecker": "^2.6.3",
        "jest": "^21.2.1",
        "prettier": "^1.9.2",
        "ts-jest": "^21.2.4",
        "ts-node": "^4.0.0",
        "tslint": "^5.8.0",
        "tslint-config-airbnb": "^5.4.2",
        "tslint-config-prettier": "^1.6.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^2.6.2"
    },
    "dependencies": {
        "@babel/traverse": "7.0.0-beta.34",
        "babylon": "^7.0.0-beta.34",
        "chalk": "^2.3.0",
        "cosmiconfig": "^3.1.0"
    },
    "engines": {
        "node": ">=8.0.0"
    }
}
